<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigationGraph"
    app:startDestination="@+id/dashboardFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="id.ac.ui.cs.mobileprogramming.tyagitalarasati.welist.view.ListFragment"
        android:label="ListFragment">
        <action
            android:id="@+id/actionDetailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/fragment_fade_enter"/>
        <action
            android:id="@+id/actionCreateList"
            app:destination="@id/creatListFragment" />
        <action
            android:id="@+id/actionListtoDash"
            app:destination="@id/dashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="id.ac.ui.cs.mobileprogramming.tyagitalarasati.welist.view.DetailFragment"
        android:label="DetailFragment">
        <action
            android:id="@+id/actionListFragment"
            app:destination="@id/listFragment"
            app:exitAnim="@anim/fragment_close_exit" />
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/creatListFragment"
        android:name="id.ac.ui.cs.mobileprogramming.tyagitalarasati.welist.view.CreateListFragment"
        android:label="CreatListFragment">
        <action
            android:id="@+id/actionResultCreate"
            app:destination="@id/listFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="id.ac.ui.cs.mobileprogramming.tyagitalarasati.welist.view.DashboardFragment"
        android:label="DashboardFragment">
        <action
            android:id="@+id/actionDashtoList"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>